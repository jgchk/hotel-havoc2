<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.menu.MenuActivity">

    <Button
        android:id="@+id/main_btn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-condensed"
        android:text="Start Game"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/slogan"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hhslogan" />

    <!--<pl.droidsonroids.gif.GifImageView-->
        <!--android:id="@+id/logo_kitty"-->
        <!--android:layout_width="138dp"-->
        <!--android:layout_height="114dp"-->
        <!--android:layout_marginStart="228dp"-->
        <!--android:layout_marginTop="88dp"-->
        <!--android:src="@drawable/chefkitty"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    <!--<pl.droidsonroids.gif.GifImageView-->
    <!--android:layout_width="138dp"-->
    <!--android:layout_height="123dp"-->
    <!--android:src="@drawable/kittychef2"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"-->
    <!--android:layout_marginStart="32dp"/>-->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="241dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="136dp"
        android:scaleX="2.2"
        android:scaleY="2.25"
        android:src="@drawable/hhlogo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/startgame_kitty"
        android:layout_width="226dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        scrolling_image_view:srcCompat="@drawable/kittychef3" />

    <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/scrolling_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        scrolling_image_view:speed="2dp"
        scrolling_image_view:src="@drawable/banner2" />

</android.support.constraint.ConstraintLayout>

